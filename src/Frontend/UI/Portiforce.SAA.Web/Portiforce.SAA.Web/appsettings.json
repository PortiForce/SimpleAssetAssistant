{
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}",
          "Hosts": [ "*.dev.localhost" ]
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" },

          // Forward the original Host (e.g., app.dev.localhost) so API can validate origin if needed
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "api-backend": {
            "Address": "https://localhost:7001/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}